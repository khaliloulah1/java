pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                withMaven(traceability: true) {
                }
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'cd <path_to_test_reports> && cp *.xml $WORKSPACE'
            }
        }
        post {
            always {
                // Publish JUnit test results
                junit '**/test-results/*.xml'
            }

        stage('Deploy') {
            steps {
                withMaven(traceability: true) {
                }
            }
        }



    }}}
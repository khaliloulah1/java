pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'mvn test'
            }
        }
        stage('SonarQube analysis') {
            steps {
                echo 'Analyzing..'
                script {
                    // Assurez-vous que le plugin SonarQube est installé et configuré correctement
                    // Vous devez également configurer votre projet dans SonarQube
                    def scannerHome = tool 'SonarQube Scanner 3.0';
                    withSonarQubeEnv('My SonarQube Server') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                // Ajoutez ici vos commandes de déploiement
            }
        }
    }
}
